<!-- Jumbotron -->
<div class="container contact-page">
  <div class="jumbotron">
    <h1>About the Indy Public Transit Survey</h1>
  </div>

  <!-- Survey and Developer Info -->
  <div class="row">
    <div class="col-md-4 col-lg-4">
      <h2>The Survey</h2>
      <%= Textfile.content_for("app_info") %>
      <h2>Build Summary</h2>
      <%= Textfile.content_for("tools_used") %>
      <div class="row">
        <div class="col-md-2">
          <%= image_tag('ruby-logo.png', class: "img-responsive", alt: "Responsive Image", display: "flex") %>
        </div>
        <div class="col-md-2">
          <%= image_tag('html-logo.png', class: "img-responsive", alt: "Responsive Image") %>
        </div>
        <div class="col-md-2">
          <%= image_tag('css-logo.png', class: "img-responsive", alt: "Responsive Image") %>
        </div>
        <div class="col-md-2">
          <%= image_tag('javascript-logo.png', class: "img-responsive", alt: "Responsive Image") %>
        </div>
        <div class="col-md-2">
          <%= image_tag('Ruby_on_Rails-logo.png', class: "img-responsive", alt: "Responsive Image") %>
        </div>
      </div>
    </div>
    <div class="col-md-4 col-lg-4">
      <h2>How to use this app</h2>
      <%= Textfile.content_for("how_to_use") %>
   </div>
    <div class="col-md-4 col-lg-4 suggestions">
      <h2>About the Developer</h2>
      <%= image_tag('dev_pic.jpg', width: "30%", class: "img-responsive", alt: "Responsive Image", class: "img-rounded") %>
      <%= Textfile.content_for("developer_bio") %>
      <center><%= link_to "To contact me, click here", '/pages/about', class: "btn btn-default btn-sm" %></center>
    </div>
  </div>
</div>
