<!-- Full Page Image Background Carousel Header -->
<header id="myCarousel" class="carousel slide">
   <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
  </ol>

   <!-- Wrapper for Slides -->
  <div class="carousel-inner">
    <div class="item active">
           <!-- Set the first background image using inline CSS below. -->
      <div class="container carousel-images">
        <%= image_tag('road', class: "img-responsive", alt: "Responsive Image") %>
        <div class="carousel-caption">
          <h1>What if you could save money, not stress over your time spent in traffic, and use your commute time for other, more productive endeavors?</h1>
        </div>
      </div>
    </div>
    <div class="item">
           <!-- Set the second background image using inline CSS below. -->
      <div class="container carousel-images">
        <%= image_tag('light_rail', class: "img-responsive", alt: "Responsive Image") %>
          <div class="carousel-caption">
            <h1>Is public transportation something you would consider?</h1>
          </div>
      </div>
    </div>
    <div class="item">
           <!-- Set the third background image using inline CSS below. -->
      <div class="container carousel-images">
        <%= image_tag('downtown4', class: "img-responsive", alt: "Responsive Image") %>
          <div class="carousel-caption">
            <h1>Take the Indy Public Transit Survey to see just how much time and money you spend commuting and the potential savings public transportation would provide!</h1>
            <h1><%= link_to ">>> Take the Survey <<<", new_commute_path, class: "btn btn-default" %></h1>
          </div>
      </div>
    </div>
   </div>

   <!-- Controls -->
   <a class="left carousel-control" href="#myCarousel" data-slide="prev">
       <span class="icon-prev"></span>
   </a>
   <a class="right carousel-control" href="#myCarousel" data-slide="next">
       <span class="icon-next"></span>
   </a>

</header>

<!-- Page Content -->
<div class="container">

   <div class="row">
       <div class="col-lg-12">
         <h1>Welcome to the Indy Public Transit Survey</h1>
         <p></p>
       </div>
   </div>
</div>
