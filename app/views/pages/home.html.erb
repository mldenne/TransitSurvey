<!-- Full Page Image Background Carousel Header -->
<header id="myCarousel" class="carousel slide">
   <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
  </ol>

   <!-- Wrapper for Slides -->
  <div class="carousel-inner">
    <div class="item active">
           <!-- Set the first background image using inline CSS below. -->
      <div class="container carousel-images">
        <%= image_tag('downtown4.jpg', class: "img-responsive", alt: "Responsive Image") %>
          <div class="carousel-caption">
            <h1>If you could save time and money as well as lower your stress levels by using public transportation, would you?</h1>
            <h2>Take the survey to find out how much time and money you spend on your work commute!</h2>
            <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#TransitSurveyModal" href="#">>>> Take the Survey <<<</button>
          </div>
      </div>
    </div>
    <div class="item">
           <!-- Set the second background image using inline CSS below. -->
      <div class="container carousel-images">
        <%= image_tag('light_rail.jpg', class: "img-responsive", alt: "Responsive Image") %>
          <div class="carousel-caption">
            <h1>What are your Neighbors' commutes?</h1>
            <h2>Compare and contrast your commuter stats with those around you!</h2>
            <%= link_to ">>> Communities <<<", communities_path, class: "btn btn-primary btn-lg" %>
          </div>
      </div>
    </div>
    <div class="item">
           <!-- Set the third background image using inline CSS below. -->
      <div class="container carousel-images">
        <%= image_tag('road.jpg', class: "img-responsive", alt: "Responsive Image") %>
        <div class="carousel-caption">
          <h1>What if you could save money, not stress over your time spent in traffic, and use your commute time for other, more productive endeavors?</h1>
        </div>
      </div>
    </div>
   </div>

   <!-- Controls -->
   <a class="left carousel-control" href="#myCarousel" data-slide="prev">
       <span class="icon-prev"></span>
   </a>
   <a class="right carousel-control" href="#myCarousel" data-slide="next">
       <span class="icon-next"></span>
   </a>

</header>
