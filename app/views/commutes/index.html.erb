<div class="container">
  <div class="row">
    <div class="col-sm-2 left-sidebar-commutes">
      <%= Textfile.content_for("left_sidebar_commutes") %>
    </div>
    <div class="col-sm-8">
      <h3>Total Commuters Stats</h3>
      <div class="well communities-scroll">
        <table class="table commutes-all">
          <thead>
            <tr>
              <th>Total Number of Commuters</th>
              <th>Average Commuter Miles</th>
              <th>Total Weekly Monies Spent on Commuting</th>
              <th>Total Annual Monies Spent on Commuting</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= @commutes.count %></td>
              <td><%= @commutes.average(:distance_in_miles).round(2).to_s %></td>
              <td>$<%= @commutes.sum(:drive_cost_per_week) %></td>
              <td>$<%= @commutes.sum(:drive_cost_per_year) %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
