<!DOCTYPE html>
<html>
  <head>
    <title>TransitSurvey</title>
    <%= csrf_meta_tags %>

    <link href="https://fonts.googleapis.com/css?family=Nova+Flat" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Mallanna" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <!-- Custom CSS -->
    <link href="assets/full-slider.css" rel="stylesheet">
    <link rel="stylesheet" href="assets/rrssb.css" />

  </head>

  <body class="<%= Rails.env %>">
    <!-- Navigation -->
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <div class="container">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <%= link_to "Indianapolis Public Transit Survey", root_path, class: "navbar-brand" %>
                </div>
                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                          <%= link_to "Take the Survey", new_commute_path, { 'data-toggle' => "modal", 'data-target' => "#TransitSurveyModal" } %>
                        </li>
                        <li>
                          <%= link_to "Communities", communities_path %>
                        </li>
                        <li>
                            <a href="#">Districts</a>
                        </li>
                    </ul>
                </div>
                <!-- /.navbar-collapse -->
            </div>
            <!-- /.container -->
        </nav>

      <%= yield %>

      <div class="modal fade" id="TransitSurveyModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              <h4 class="modal-title" id="myModalLabel">Modal title</h4>
            </div>
            <div class="modal-body">
              <%= render 'commutes/form' %>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
              <button type="button" class="btn btn-primary">Save changes</button>
            </div>
          </div>
        </div>
      </div>


        <!-- <div class="col-sm-2"> -->
          <!-- <div class="btn-group-vertical"> -->
            <!-- <%= link_to 'Take the Transit Survey', new_commute_path, class: "btn btn-primary" %> -->
            <!-- <%= link_to 'View Indianapolis Heatmap', root_path, class: "btn btn-primary" %> -->
            <!-- <%= link_to 'Community Heatmaps', communities_path, class: "btn btn-primary" %> -->

    <footer class="footer">
      <div class="row">
        <div class="col-md-6">
          <div class="navbar-brand navbar-left">
            <a class="footer-links" href="#">Add in image tag for Iron Yard</a>
          </div>
        </div>
        <div class="col-md-6">
          <div class="navbar-brand navbar-right">
            <a class="footer-links" href="#">Marie Denney</a>
          </div>
        </div>
      </div>
    </footer>

  </body>
</html>
