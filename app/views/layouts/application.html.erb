<!DOCTYPE html>
<html>
  <head>
    <title>TransitSurvey</title>
    <%= csrf_meta_tags %>

    <link href="https://fonts.googleapis.com/css?family=Francois+One" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Mallanna" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <!-- Custom CSS -->
    <!-- <link href="assets/full-slider.css" rel="stylesheet">
    <link href="assets/rrssb.css" rel="stylesheet"/> -->

  </head>

  <body class="<%= Rails.env %>">

    <!-- Navigation -->
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <%= link_to "Indy Public Transit Survey", root_path, class: "navbar-brand" %>
        </div>
        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav navbar-right">
            <li>
              <a data-remote="false" data-toggle="modal" data-target="#TransitSurveyModal" href="#">Take the Survey</a>
            </li>
            <li>
              <%= link_to "Heatmap", points_path unless current_page?(points_path) %>
            </li>
            <li>
              <%= link_to "Communities", communities_path unless current_page?(communities_path) %>
            </li>
            <li>
                <a href="#">Districts</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <%= yield %>

    <footer class="footer">
      <div class="container">
        <nav class="navbar">
          <div class="row">
            <div class="col-md-6">
              <div class="navbar-nav navbar-brand navbar-left">
                <a href="https://www.theironyard.com">Add in image tag for Iron Yard</a>
              </div>
            </div>
            <div class="col-md-5">
              <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                  <li>
                    <%= link_to "About", '/pages/about' unless current_page?('/pages/about') %>
                  </li>
                  <li>
                    <%= link_to "Contact", '/pages/contact' unless current_page?('/pages/contact') %>
                  </li>
                </ul>
              </div>
            </div>
          </div>
          <div class="col-md-1">
          </div>
        </div>
      </div>
    </footer>

    <!-- # modal -->
    <div class="modal fade" id="TransitSurveyModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="myModalLabel">Transit Survey</h4>
          </div>
          <div class="modal-body">
            <%= render 'commutes/form' %>
          </div>
        </div>
      </div>
    </div>

    <!-- Script to Activate the Carousel -->
    <script>
    $('.carousel').carousel({
        interval: 8000 //changes the speed
    })
    </script>

  </body>
</html>
